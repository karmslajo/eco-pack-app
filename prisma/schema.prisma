// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Package {
  id          Int                 @id @default(autoincrement())
  name        String
  description String
  price       Float
  size        String
  capacity    String
  category    Category[]
  food        Food                @relation(fields: [foodId], references: [id])
  images      Image[]
  materials   PackagingMaterial[]

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  foodId    Int
}

model Food {
  id       Int      @id @default(autoincrement())
  name     String
  category Category

  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")
  Package   Package[]
}

model Image {
  id   Int    @id @default(autoincrement())
  name String
  url  String

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  Package   Package? @relation(fields: [packageId], references: [id])
  packageId Int?
}

enum Category {
  BabyFood       @map("BABYFOOD")
  Bakery         @map("BAKERY")
  Beverages      @map("BEVERAGES")
  BreadsPastries @map("BREADSPASTRIES")
  Condiment      @map("CONDIMENT")
  Dairy          @map("DAIRY")
  Dessert        @map("DESSERT")
  DryGoods       @map("DRYGOODS")
  Fruits         @map("FRUITS")
  Meat           @map("MEAT")
  Pasta          @map("PASTA")
  Snacks         @map("SNACKS")
  Seafood        @map("SEAFOOD")
  StreetFoods    @map("STREETFOODS")
  Vegetables     @map("VEGETABLES")

  @@map("category")
}

enum PackagingMaterial {
  Aluminium    @map("ALUMINIUM")
  FoilBags     @map("FOILBAGS")
  Cardboard    @map("CARDBOARD")
  Carton       @map("CARTON")
  Hardboard    @map("HARDBOARD")
  Glass        @map("GLASS")
  Ceramic      @map("CERAMIC")
  Metal        @map("METAL")
  Tin          @map("TIN")
  Steel        @map("STEEL")
  Paper        @map("PAPER")
  Paperboard   @map("PAPERBOARD")
  CardStock    @map("CARDSTOCK")
  Plastic      @map("PLASTIC")
  Polymer      @map("POLYMER")
  Polyethylene @map("POLYETHYLENE")
  Film         @map("FILM")
  Textile      @map("TEXTILE")
  Fabric       @map("FABRIC")
  Leather      @map("LEATHER")
  Wood         @map("WOOD")
  Cork         @map("CORK")
  Sustainable  @map("SUSTAINABLE")
}
